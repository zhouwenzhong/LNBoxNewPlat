<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="24sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_index"
            android:padding="0dp" >
            <include layout="@layout/layout_ll_phone"/>
            <LinearLayout
                android:id="@+id/ll_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@+id/ll_phone"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/bg_ceng"
                android:orientation="vertical"
                android:padding="0dp" >

                <EditText
                    android:id="@+id/edit_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:enabled="false"
                    android:focusable="false"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:orientation="horizontal" >

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_1"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_2"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_3"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:orientation="horizontal" >

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_4"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_5"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_6"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:orientation="horizontal" >

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_7"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_8"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_9"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:orientation="horizontal" >

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_numberc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_c"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_number0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/bg_number_selector"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_0"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_numberd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_number_selector"
                        android:contentDescription="@null"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/number_d"
                        android:textColor="@color/white"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/tv_yuyin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/btn_select_yuyin"
                            android:focusable="true"
                            android:contentDescription="@null"
                            android:padding="0dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_yuyin"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/tv_shipin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/btn_select_shipin"
                            android:focusable="true"
                            android:contentDescription="@null"
                            android:padding="0dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/number_shipin"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/dtv_kuaijie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_btn_kuaijie_selector"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="@string/add_short_tell"
                    android:textColor="@color/white"
                    android:textSize="15sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="13dp"
                android:layout_toLeftOf="@id/ll_number"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tv_number"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_online_status"
                        android:layout_toRightOf="@id/tv_number"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:text="（在线）"
                        android:textSize="16sp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/ll_bottom"
                    android:layout_marginTop="35dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/img"
                    android:layout_height="match_parent">
                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:scrollbarAlwaysDrawHorizontalTrack="true"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_alignParentBottom="true">

                        <com.lianyao.ftfbox.domain.view.MovieLayout
                            android:id="@+id/movieLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/ll_video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/ll_bottom"
                    android:layout_below="@id/ll_header"
                    android:layout_marginBottom="20dp"
                    android:visibility="gone" >

                    <com.lianyao.ftf.sdk.view.PercentFrameLayout
                        android:id="@+id/remote_video_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <org.webrtc.SurfaceViewRenderer
                            android:id="@+id/remote_video_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >
                        </org.webrtc.SurfaceViewRenderer>
                    </com.lianyao.ftf.sdk.view.PercentFrameLayout>

                    <com.lianyao.ftf.sdk.view.PercentFrameLayout
                        android:id="@+id/local_video_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <org.webrtc.SurfaceViewRenderer
                            android:id="@+id/local_video_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" >
                        </org.webrtc.SurfaceViewRenderer>
                    </com.lianyao.ftf.sdk.view.PercentFrameLayout>

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:visibility="gone"
                        android:id="@+id/dtv_cut_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:background="@drawable/shipin_bg_gua"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/cut_call"
                        android:textColor="#ff0000"
                        android:textSize="12sp" />
                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:visibility="gone"
                        android:id="@+id/dtv_exit_full_call"
                        android:layout_toLeftOf="@+id/dtv_cut_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/shipin_bg_gua"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/exit_full_screen"
                        android:textColor="#ff0000"
                        android:textSize="12sp" />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/img_zhedang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/ll_bottom"
                    android:layout_below="@id/ll_header"
                    android:background="@drawable/img"
                    android:contentDescription="@null"
                    android:visibility="gone"
                    />

                <RelativeLayout
                    android:id="@+id/rl_yuyin"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="match_parent"
                    android:layout_above="@id/ll_bottom"
                    android:layout_below="@id/ll_header"
                    android:background="@drawable/img_bg"
                    android:visibility="gone"
                    android:padding="0dp" >

                    <com.lianyao.ftfbox.domain.view.DyneTextView
                        android:id="@+id/dtv_cut_yycall"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="40dp"
                        android:layout_marginLeft="40dp"
                        android:background="@drawable/btn_jieshu"
                        android:focusable="true"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/cut_call"
                        android:textColor="@color/c333"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/dtv_cut_yycall"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="40dp"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/img_ren"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="25dp"
                            android:background="@drawable/hao"
                            android:contentDescription="@null"
                            android:gravity="center" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/tv_nickname_yy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white"
                                android:textSize="20sp" />

                            <TextView
                                android:id="@+id/tv_number_yy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/white"
                                android:textSize="20sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>